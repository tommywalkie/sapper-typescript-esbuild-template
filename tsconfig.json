{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": ["src/**/*"],
    "exclude": [
      "node_modules/**/*",
      "__sapper__/**/*",
      "public/**/*",
      "typings/**/*"
    ],
    "compilerOptions": {
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "lib": ["DOM", "WebWorker"],
      "types": ["svelte", "node", "@sapper"],
      "typeRoots": ["./typings", "./node_modules/@types"]
    }
  }